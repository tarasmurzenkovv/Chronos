{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["es6", "dom", "es2017"],
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "~/*": ["*"]
    },
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "public"],
  "noImplicitAny": false
}
